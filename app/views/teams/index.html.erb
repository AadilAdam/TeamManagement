<div class="container" >
  <div class="row top-buffer">
      <% @teams.each do |team| %>
        <div class="col-md-4">
          <div class="row justify-content-center">
              <% if team.image %>
                  <%= image_tag image_url(team.image), class: "rounded-circle image-container" %>
              <% end %>
          </div>
          <div class="row justify-content-center">
            <%= link_to 'Show', team , class: "btn btn-info" %>

            <%#= link_to 'Edit', edit_team_path(team), { class: "btn btn-primary", :remote => true, 'id' => "modal-window", 'data-toggle' => "modal",'data-target' => '#modal-window' } %>

            <%#= link_to '#myModal', edit_team_path(team), { class: "btn btn-primary", :remote => true, 'id' => "modal-window", 'data-toggle' => "modal",'data-target' => '#modal-window' } %>

            <!-- <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#ajax-modal" data-url="<%= edit_team_path(team) %>">Edit</button> -->

            <a data-toggle="modal" data-url="<%= edit_team_path(team) %>" class="open-AddPointDialog btn btn-primary big" data-target="#addPointDialog"> <i class="fas fa-edit"></i> Edit </a>

            <%= link_to '<i class="fas fa-trash-alt"></i> Destroy '.html_safe, team, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning" %>
          </div>
        </div>
      <% end %>
      <% if @teams.empty? %>
        <div class="alert alert-info"> Nothing here yet.!, Add a team.</div>
      <% end %>   
    </div>
</div>

<div class="modal fade " id="addPointDialog" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel"></div>

